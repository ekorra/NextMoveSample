<Window x:Class="NextMoveSample.Wpf.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NextMoveSample.Wpf.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" HorizontalAlignment="Stretch">
            <TabItem Header="Arkivmelding">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Adressering">
                        <StackPanel>
                            <Label Content="Avsender"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox DataContext="{Binding MessageViewModel}" Text="{Binding Sender.Id}" Width="100" />
                                <TextBox IsReadOnly="True" DataContext="{Binding MessageViewModel}" Text="{Binding Sender.Name}" Width="Auto"></TextBox>
                            </StackPanel>
                            <Label Content="Mottaker"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox DataContext="{Binding MessageViewModel}" Text="{Binding Receiver.Id}" Width="100" />
                                <TextBox IsReadOnly="True" DataContext="{Binding MessageViewModel}" Text="{Binding Receiver.Name}" Width="Auto"></TextBox>
                            </StackPanel>
                            <Label Content="Prosess"/>
                            <ComboBox DataContext="{Binding MessageViewModel}" ItemsSource="{Binding Path=Receiver.SupportedProcesses}" DisplayMemberPath="Name" SelectedValue="{Binding Path=SelectedProcess}" />
                        </StackPanel>
                    </GroupBox>
                    <StackPanel Grid.Column="1">
                        <GroupBox Header="Forettningsmelding">
                            <StackPanel>
                                <Label>Sikkerhetsnivå</Label>
                                <ComboBox ItemsSource="{Binding Path=SecurityLevels}" SelectedValue="{Binding Path=MessageViewModel.SelectedSecurityLevel}"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Payload">
                            <StackPanel>
                                <Button >Velg filer</Button>
                                <ListBox ItemsSource="{Binding Path=MessageViewModel.PayloadInfo}" AllowDrop="True" DragEnter="UIElement_OnDragEnter" Drop="UIElement_OnDrop" Height="50"></ListBox>
                                <ListBox />
                            </StackPanel>
                        </GroupBox>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="Reset" Content="Reset"/>
                            <!--<Button Name="SendButton" Click="SendButton_OnClick">Send</Button>-->
                            <Button x:Name="Send" Content="Send" IsEnabled="{Binding Path=MessageViewModel.IsValid}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Avtalemelding"></TabItem>
            <TabItem Header="DPI"></TabItem>
        </TabControl>
        <GridSplitter Grid.Row="1"></GridSplitter>
        <TabControl Grid.Row="2">
            <TabItem Header="Sendt">
                <StackPanel>
                    <DataGrid >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mottaker" Binding="{Binding Receiver.Name}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Orgnr" Binding="{Binding Receiver.Id}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Meldingsid" Binding="{Binding MessageId}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Forsendelsesid" Binding="{Binding ConversationId}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Mottatt">
                <StackPanel>
                    <DataGrid ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor},  Path=ReceivedMessages}" IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Sender" Binding="{Binding Sender.Name}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Orgnr" Binding="{Binding Sender.Id}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Meldingsid" Binding="{Binding MessageId}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Forsendelsesid" Binding="{Binding ConversationId}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Sendt">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="statusfilter" Content="Alle"></RadioButton>
                        <RadioButton GroupName="statusfilter" Content="Sendt"></RadioButton>
                        <RadioButton GroupName="statusfilter" Content="Mottatt"></RadioButton>
                    </StackPanel>
                    <DataGrid ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor},  Path=Statuses}"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
